<div  class="container-fluid p-0 my-3" >
  <div class="show-recipe">
    <div class="d-flex justify-content-between">
      <%= link_to selection_path(@recipe) do %>
        <%= image_tag "back_left.png", height: 20, width: 20 %>
      <% end %>
      <h1 class = "text-center" class = "m-3" ><strong><%= @recipe.name %></strong></h1>
      <% if @favorite.nil? %>
        <%= link_to recipe_favorites_path(@recipe), method: :post do %>
          <%= image_tag "ribbon1.png", height: 20, width: 25 %>
        <% end %>
      <% else %>
        <p><%= link_to "ðŸ—‘", favorite_path(@favorite), method: :delete %></p>
      <% end %>
    </div>
    <%= cl_image_tag @recipe.photo.key, height: 400, width: 500, crop: :fill, class: "show_img", class: "mb-3" %>
    <h4 class = "m-3">Cooking instructions:</h4>

    <% @recipe.ingredient_recipes.each do |ing| %>
      <p class = "text-center" ><%= ing.ingredient.name %></p>
    <% end %>

    <p class = "m-3"><%= @recipe.instructions %></p>
  </div>
</div>
